h1 Welcome to DIDID

.add-task
  input(type='text', name='new-item-title', id='new-item-title')
  button Add Task

.listing
  each todo in todos
    .task
      input(type='checkbox', data-id=`${todo.id}`, checked=todo.completed)
      
      span
        span.title(data-id=`${todo.id}`)= todo.title

      button(class='delete', data-id=`${todo.id}`) X
      button(class='up', data-id=`${todo.id}`) +
      button(class='down', data-id=`${todo.id}`) -

.legend
  div
  | Edit
  div
  | Delete
  div
  | Add
