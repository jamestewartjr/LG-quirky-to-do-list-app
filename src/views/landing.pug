h1 Welcome to DIDID

.add-task
  input(type='text', name='new-item-title', id='new-item-title')
  button Add Task

.listing
  each todo in todos
    .task
      input(type='checkbox', data-id=`${todo.id}`, id="complete", unchecked='true')
      span
        span.title(data-id=`${todo.id}`)= todo.title
      button(class='delete', data-id=`${todo.id}` id='delete-action') X

.legend
  div
  | Edit
  div
  | Delete
  div
  | Add
